service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth.uid != null;
    }

    match /user_data/{id} {
      allow read;
    }

    match /relations/{id} {
      allow read;
    }

    match /members/{id} {
      allow create: if isSignedIn() && request.auth.uid == id;
      allow read;
    }

    match /operations/{id} {
      // We should do additional validation for create, but for now this can be done later when we decide whether to add it to blockchain
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.creator_uid;
      allow read;
    }
  }
}
