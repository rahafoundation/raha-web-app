service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth.uid != null;
    }

    match /members/{id} {
      // TODO do not allow create after switch to raha-api
      allow create: if isSignedIn() && request.auth.uid == id;
      allow read;
    }

    match /operations/{id} {
      // TODO do not allow create after switch to raha-api
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.creator_uid && request.resource.data.applied == false;
      allow read;
    }
  }
}
